@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@
<link rel="stylesheet" href="~/styles/css/links.css" asp-append-version="true" />

<div class="container-fluid position-absolute top-50 start-50 translate-middle">
<div class="row">
    <div class="card reg-card p-3">


        <div class="col-xl-4">

            <div class="card-body p-5 side-reg-card">
                <div class="mb-3">
                    <h5 class="card-title pt-5 pb-5">OMS</h5>
                    <h1 class="card-title pt-5">Start your journey with us.</h1>
                    <p class="card-text pt-2 pb-5">Orgnaize your inventory with Libyan's best application for Orders managment system for e-shops business owners.</p>
                    <p class="fs-6 fw-light pt-5 pb-5">Provided by uniPro.</p>
                </div>
            </div>
        </div>

        <div class="col-xl-8">
            <div class="card-body p-5 ">
                <section>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="mb-3">
                            <h5 class=" card-title pt-5 pb-1 fw-bolder">Create a new account.</h5>
                                <p class="fs-6 fw-light  pb-5">Already a Member ? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Sign in</a>.</p>
                                <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="col-md-6 mb-4 form-floating ">
                                @*<label asp-for="Input.UserName"></label>*@
                                <input asp-for="Input.UserName" id="username" class="form-control" aria-required="true" />
                                        <label for="username">Username</label>
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>
                                    <div class="col-md-6 mb-4 form-floating ">
                                        <input asp-for="Input.Email" id="emails" class="form-control" autocomplete="username" aria-required="true" />
                                        @*<label asp-for="Input.Email"></label>*@
                                        <label for="emails">Email address</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4 form-floating ">
                                        <input asp-for="Input.Password" id="password" class="form-control" autocomplete="new-password" aria-required="true" />
                                        <label for="password">Password</label>

                                @*<label asp-for="Input.Password"></label>*@
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                                    <div class="col-md-6 mb-4 form-floating ">
                                        <input asp-for="Input.ConfirmPassword" id="rePassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                        <label for="rePassword">Confirm Password</label>

                                @*<label asp-for="Input.ConfirmPassword"></label>*@
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            </div>
                            <div class="d-flex align-items-start flex-column mb-3">
                                <div class="col-md-3  p-2">
                                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>



