@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" href="~/styles/css/links.css" asp-append-version="true" />
@*<h1>@ViewData["Title"]</h1>*@
<div class="container-fluid position-absolute top-50 start-50 translate-middle">
    @*<div class="col-md-10">*@

    <div class="row">
        <div class="card reg-card p-3">


            <div class="col-xl-4">

                <div class="card-body p-5 side-reg-card">
                    <div class="mb-3">
                        <h5 class="card-title pt-5 pb-5">OMS</h5>
                        <h1 class="card-title pt-5">Start your journey with us.</h1>
                        <p class="card-text pt-2 pb-5">Orgnaize your inventory with Libyan's best application for Orders managment system for e-shops business owners.</p>
                        <p class="fs-6 fw-light pt-5 pb-5">Provided by uniPro.</p>
                    </div>
                </div>
            </div>

            <div class="col-xl-8">
                <div class="card-body p-5 ">
                    <section>
                        <form id="account" method="post">
                            <div class="mb-3">
                                <h5 class="card-title pt-5 pb-1   fw-bolder">Sign in  </h5>
                                <p class="fs-6 fw-light  pb-5">Don't Have an account ? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a> Today .</p>
                                <div class="row">
                                    <div class="col-md-6 mb-4 form-floating ">
                                        <input asp-for="Input.Email" id="emails" class="form-control" aria-required="true" placeholder="Email" />
                                        <label for="emails">Email address</label>
                                        @*<label asp-for="Input.Email" class="form-label"></label>*@
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-4 form-floating">
                                        <input asp-for="Input.Password" id="passwords" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                                        <label for="passwords">Password</label>
                                        @*<label asp-for="Input.Password" class="form-label"></label>*@
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="checkbox mt-2">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                                <div class="col-md-8 mt-1 mb-5">
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                    </p>
                                </div>
                                <div class="d-flex align-items-start flex-column mb-3">
                                    <div class="col-md-3  p-2">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                    </div>


                                </div>
                                <div>

                                    @*                            <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                    </p>*@
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>

        </div>
    </div>
    @*</div>*@
</div>
