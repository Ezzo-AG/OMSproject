@model OMSproject.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="header">
    <div class="container-fluid d-flex align-items-center justify-content-between">
        <div class="header-text">
            Product / Edit
        </div>


        <div class="d-flex flex-shrink-0">
            <a href="#" class="btn btn-sm btn-primary">Get Pro</a>
        </div>
    </div>
</div>

<form asp-action="Edit" name="table" id="table">

    <fieldset>
        <div class="container-fluid">
            <div class="row">
                <div class="card">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body pb-2">
                        <div class="d-flex align-items-center justify-content-between mb-5">
                            <h3>New Client</h3>
                            <div class="d-flex flex-shrink-0">
                                <button class="btn btn-icon btn-sm btn-light-dark" title="Back" type="button" onclick="history.back()">
                                    <i class='bx bx-arrow-back fs-4'></i>
                                </button>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Product_Name" class="control-label"></label>
                                <input asp-for="Product_Name" class="form-control" name="product_name" />
                                <span asp-validation-for="Product_Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cost" class="control-label"></label>
                                <input asp-for="Cost" class="form-control" name="cost" />
                                <span asp-validation-for="Cost" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" name="price" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Total_QTY" class="control-label">Total Quantity  </label>
                                <input asp-for="Total_QTY" id="total" class="form-control" name="total_qty" readonly />

                            </div>
                        </div>
                        <div class="col-md-12 mb-4">
                            <label asp-for="Notes" class="control-label"></label>
                            <input asp-for="Notes" class="form-control" name="notes" />
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                    @*</div>*@

                    @*<div class="row">*@
                    @*<div class="card">*@
                    <div class="card-body pb-2">
                        <h3>Clients Index </h3>
                        <table id="tableHa" class="table table-rounded table-row-bordered g-4">
                            <thead>
                                <tr class="fw-bold fs-6">
                                    <th>Color</th>
                                    <th>Quantity</th>
                                    <th>
                                        <button type="button" id="addcolor" onClick="AddItem(this)" class="btn btn-sm btn-icon btn-light-info">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" style="width: 30px; ">
                                                <path fill="hsl(var(--txt))" d="M256 512c141.4 0 256-114.6 256-256S397.4 0 256 0S0 114.6 0 256S114.6 512 256 512zM232 344V280H168c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V168c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H280v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z" />
                                            </svg>
                                        </button>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @*@foreach (var item in Model)*@
                                @for (int i = 0; i < Model.colors.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input asp-for="@Model.colors[i].ColorName" class="form-control form-control-sm" style="background:var(--body-color)" />
                                            <span asp-validation-for="@Model.colors[i].ColorName" class="text-danger"></span>

                                        </td>
                                        <td style="padding: 1rem 0">
                                            <input asp-for="@Model.colors[i].Quantity" class="form-control form-control-sm" style="background:var(--body-color)" />
                                            <span asp-validation-for="@Model.colors[i].Quantity" class="text-danger"></span>
                                        </td>
                                        <td style="width: 10%;">
                                            <input type="hidden" class="nothidden" asp-for="@Model.colors[i].IsDeleted" />
                                            <button id="btnremove-@i" type="button" class="form-btn cancel" onclick="DeleteItem(this)" >
                                                    <i class='bx bxs-trash fs-1'></i>

                                            </button>
                                            <input type="hidden" id="mm" value=i />
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                        <input type="hidden" id="hdnLastIndex" value="0" />

                        <div class="col-md-2 mb-3">
                            <input type="submit" value="Save" class="btn btn-light-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*</div>*@
    </fieldset>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}


