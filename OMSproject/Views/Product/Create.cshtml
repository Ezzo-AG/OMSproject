@model OMSproject.Models.Product

@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Create" enctype="multipart/form-data" name="table" id="table">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           @* <div class="form-group">
                <label asp-for="Product_Id" class="control-label"></label>
                <input asp-for="Product_Id" class="form-control" name="product_id" />
                <span asp-validation-for="Product_Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Product_Name" class="control-label"></label>
                <input asp-for="Product_Name" class="form-control" name="product_name" />
                <span asp-validation-for="Product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" name="cost" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" name="price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total_QTY" class="control-label"></label>
                <input asp-for="Total_QTY" id="total" class="form-control-plaintext" name="total_qty" readonly/>
                @*<span asp-validation-for="Total_QTY" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" name="notes" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <br />
          
            <div class="col-md-12" style="height:200px;overflow-y:auto;">
                <table id="tableHa" class="table table-striped table-sm" border="1">
                    <thead >
                        <tr>
                            <th>ProductName</th>
                            <th>Quantity</th>
                            <th>
                                <button type="button" id="addcolor" class="btn btn-sm btn-secondary visible" onClick="AddItem(this)">Add</button>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @*@foreach (var item in Model)*@
                        @for (int i = 0; i < Model.colors.Count; i++)
                        {
                            <tr>
                                <td>
                                     <input asp-for="@Model.colors[i].ColorName" class="form-control" />
                                    <span asp-validation-for="@Model.colors[i].ColorName" class="text-danger"></span>

                                </td>
                                <td>
                                    <input type="hidden" asp-for="@Model.colors[i].IsDeleted" />
                                     <input asp-for="@Model.colors[i].Quantity" class="form-control Quantity" />
                                     <span asp-validation-for="@Model.colors[i].Quantity" class="text-danger"></span>
                                </td>
                                <td>

                                    <button id="btnremove" type="button" class="btn btn-sm btn-danger visible" onclick="DeleteItem(this)">Delete</button>
                                    <input type="hidden" id="mm" value=i />
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>

            <input type="hidden" id="hdnLastIndex" value="0" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}


