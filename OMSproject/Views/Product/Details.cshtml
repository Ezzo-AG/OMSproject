@model OMSproject.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <form asp-action="Edit" name="table" id="table">

        <fieldset>
             <div class="form-group">
            <label asp-for="Product_Id" class="control-label"></label>
            <input readonly asp-for="Product_Id" class="form-control" name="product_id" />
            </div>
            <div class="form-group">
                <label asp-for="Product_Name" class="control-label"></label>
                <input readonly asp-for="Product_Name" class="form-control" name="product_name" />
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input readonly asp-for="Cost" class="form-control" name="cost" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input readonly asp-for="Price" class="form-control" name="price" />
            </div>
            <div class="form-group">
                <label asp-for="Total_QTY" class="control-label"></label>
                <input readonly asp-for="Total_QTY" id="total" class="form-control-plaintext" name="total_qty" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input readonly asp-for="Notes" class="form-control" name="notes" />
            </div>
            <br />

            <div class="col-md-12" style="height:200px;overflow-y:auto;">
                <table id="tableHa" class="table table-striped table-sm" border="1">
                    <thead>
                        <tr>
                            <th>ProductName</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>

                        @for (int i = 0; i < Model.colors.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input readonly asp-for="@Model.colors[i].ColorName" class="form-control" />
                                </td>
                                <td>
                                    <input readonly asp-for="@Model.colors[i].Quantity" class="form-control Quantity" />
                                </td>
                                <td>
                                    <input type="hidden" asp-for="@Model.colors[i].IsDeleted" />
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>

        </fieldset>
    </form>


</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Product_Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
