@model IEnumerable<OMSproject.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/OrderStyle/order.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Table/TablesStyle.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Table/FormControl.css" asp-append-version="true" />
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

<style>
    .th-padding {
        padding: 1rem;
    }

</style>
<form class="d-flex nav-search" asp-action="Search" asp-controller="Product">
    <fieldset>
        <h1 style="font-size: 1.9rem;font-weight: 500;padding: 0rem 1rem 2rem; float: left">Product Index</h1>
        <button class="form-btn save" type="submit"style="float: right;">Search</button>
        <input class="form-control me-2" name="term" type="search" placeholder="Search" aria-label="Search" style="float: right;width: 30%;padding: .6rem;margin: 0 0.5rem 1rem 1rem;  ">
    


        <table class="table table-bordered" style="width: 98%;padding: 0 2rem;margin: 0px 1rem;">
            <thead style="background: #212529; color: #fff">
        <tr>
                    <th class="th-padding">
                @Html.DisplayNameFor(model => model.Product_Id)
            </th>
                    <th class="th-padding">
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
                    <th class="th-padding">
                @Html.DisplayNameFor(model => model.Cost)
            </th>
                    <th class="th-padding">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="th-padding">
                @Html.DisplayNameFor(model => model.Total_QTY)
            </th>
                    <th class="th-padding">
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Product_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_QTY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Product_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Product_Id">Details</a> 
               @*| <a asp-action="Delete" asp-route-id="@item.Product_Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
</fieldset>
</form>