@model OMSproject.Models.Client

@{
    ViewData["Title"] = "Create";
}

<div class="header">
    <div class="container-fluid d-flex align-items-center justify-content-between">
        <div class="header-text">
            Cleint / Add
        </div>


        <div class="d-flex flex-shrink-0">
            <a href="#" class="btn btn-sm btn-primary">Get Pro</a>
        </div>
    </div>
</div>
<form asp-action="Create" asp-controller="Client">
    <fieldset>
        <div class="container-fluid">
            <div class="row">
                <div class="card">
                    <div asp-validation-summary="ModelOnly" class="warning"></div>
                    <div class="card-body pb-2">
                        <div class="d-flex align-items-center justify-content-between mb-5">
                            <h3>New Client</h3>
                            <div class="d-flex flex-shrink-0">
                                <button class="btn btn-icon btn-sm btn-light-dark" title="Back" type="button" onclick="history.back()">
                                    <i class='bx bx-arrow-back fs-4'></i>
                                </button>
                            </div>
                        </div>
                        <div class="row mb-3">
                        <div class="col-md-6 mb-3">
                                    @*<label asp-for="Phone" class="control-label lbl-padding">Phone Number</label>*@
                                <input asp-for="Phone" class="form-control" placeholder="1st Phone Number (09*)" />
                                    <span asp-validation-for="Phone" class="warning"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                    @*<label asp-for="Phone2" class="control-label lbl-padding">Phone Number</label>*@
                                <input asp-for="Phone2" class="form-control" placeholder="2nd Phone Number (09*)" />
                                    <span asp-validation-for="Phone2" class="warning"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                    @*<label asp-for="ClientName" class="control-label lbl-padding">Client Name</label>*@
                                    <input asp-for="ClientName" class="form-control" placeholder="Name" />
                                    <span asp-validation-for="ClientName" class="warning">@ViewBag.message</span>
                            </div>
                            <div class="col-md-6 mb-3">
                                    @*<label asp-for="Claasification" class="control-label lbl-padding">Rate</label>*@
                                    <select asp-for="Claasification" class="form-control"
                                            asp-items="@(new SelectList(Model.ClaasificationList))"></select>
                                    <span asp-validation-for="Claasification" class="warning"></span>
                                </div>
                        <div class="col-md-2 mb-3">
                            <button title="Add New Client" type="submit" value="Add Client" class="btn btn-light-primary">
                                Add Client
                                @*<i class='bx bxs-user-plus fs-1'></i>*@
                                @*<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" style="width: 30px;">
                                <path fill="var(--peachy-red)" d="M352 128c0 70.7-57.3 128-128 128s-128-57.3-128-128S153.3 0 224 0s128 57.3 128 128zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3zM504 312V248H440c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V136c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H552v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z" />
                                </svg>*@
                            </button>
                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </fieldset>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    }

